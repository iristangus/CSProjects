{% extends "base.html.j2" %}

{% block title %}
<title>Location</title>
{% endblock %}

{% block body %}

    <h3 class="centerText">Choose a Location:</h3>
    <hr>
    <form method="POST" action="order">
        <div class="row justify-content-center">
            <div class="col-sm-4">
                <button type="submit" name="action" value="Seattle" class="center">
                    <img src="static/seattle.jpg" height=300 alt="seattle">
                </button>
                <br>
                <h3 class="centerText">Seattle</h3>
            </div>
            <div class="col-sm-4">
                <button type="submit" name="action" value="Portland" class="center">
                    <img src="static/portland.jpg" height=300 alt="portland">
                </button>
                <br>
                <h3 class="centerText">Portland</h3>
            </div>
            <div class="col-sm-4">
                <button type="submit" name="action" value="L.A." class="center">
                    <img src="static/losangeles.jpg" height=300 alt="losangeles">
                </button>
                <br>
                <h3 class="centerText">Los Angeles</h3>
            </div>
        </div>
        <input type="hidden" id="yourName" name="yourName" value="{{customerName}}">
        <input type="hidden" id="isDelivery" name="isDelivery" value={{isDelivery}}>
    </form>


{% endblock %}