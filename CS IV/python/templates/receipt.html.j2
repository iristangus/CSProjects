{% extends "base.html.j2" %}

{% block title %}
<title>Your Order</title>
{% endblock %}

{% block body %}

    <h3 class="centerText">Order for {{customerName}}:</h3>
    <hr>
    <br>
    <div>
        <h4 class="centerText">Your total is: {{customerTotal}} dollars</h4>
    </div>
    <br>

    {% if latteAmount > 0 %}
        <h4 class="centerText">{{latteAmount}}x lattes</h4>
    {% endif %}

    {% if sandwichAmount > 0 %}
        <h4 class="centerText">{{sandwichAmount}}x breakfast sandwiches</h4>
    {% endif %}

    {% if macaronAmount > 0 %}
        <h4 class="centerText">{{macaronAmount}}x boxes of macarons</h4>
    {% endif %}

    {% if cakeAmount > 0 %}
        <h4 class="centerText">{{cakeAmount}}x slices of crepe cake</h4>
    {% endif %}

    <br>

    <h4 class="centerText">{{delivery}}</h4>

{% endblock %}