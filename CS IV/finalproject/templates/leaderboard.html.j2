{% extends "base.html.j2" %}

{% block title %}
    <title>Leaderboard</title>
{% endblock %}

{% block body %}
    <form method="POST" action=".">

        <div class="header">
            <h3 class="header-text center-text">LEADERBOARD</h3>
        </div>

        <div class="main">
            
            <table class="add-margin-top add-margin-bottom">

                <tr>
                    <th>NAME</th>
                    <th>TIME</th>
                    <th>DATE</th>
                </tr>

                {% for score in scores %}

                    <tr>
                        <td>{{score['username']}}</td>
                        <td>{{score['minutes']}}m {{score['seconds']}}s</td>
                        <td>{{score['day_obtained']}}</td>
                    </tr>
                    
                {% endfor %}
            
            </table>
            <br>
            <br>
            <br>
            
        </div>

        <div class="footer">
            <a href="." class="btn btn-outline-light add-margin" >Back</a>
        </div>
        
    </form>


{% endblock %}